# See https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[Makefile]
indent_style = tab

[*.{html, js, ts, css, scss, json, yml, md, markdown}]
indent_size = 2

[*.{md, markdown}]
trim_trailing_whitespace = false
